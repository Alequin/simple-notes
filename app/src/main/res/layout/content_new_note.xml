<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/basic_padding"
    android:paddingStart="@dimen/basic_padding"
    android:paddingRight="@dimen/basic_padding"
    android:paddingEnd="@dimen/basic_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.alequinonboard.notes.activities.NewNoteActivity"
    tools:showIn="@layout/activity_new_note"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/raised_white_tile_reduced_height"/>

        <EditText
            android:id="@id/title_new_notes_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/normal_text_size"
            android:gravity="center"
            android:hint="@string/title"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:maxLength="25"/>

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/raised_white_tile"/>

            <EditText
                android:id="@id/main_text_new_notes_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/basic_padding"
                android:hint="@string/enter_note"
                android:gravity="top"
                android:background="@android:color/transparent"
                android:textSize="@dimen/normal_text_size"
                />

    </RelativeLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>

</LinearLayout>
